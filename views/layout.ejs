<!-- views/layout.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <style>
    /* 사이드바 스타일 */
    .sidebar {
      width: 200px;
      position: fixed;
      top: 0;
      left: 0;
      height: 100%;
      background-color: #333;
      padding-top: 20px;
    }

    .sidebar a {
      display: block;
      color: white;
      padding: 10px;
      text-decoration: none;
    }

    .sidebar a:hover {
      background-color: #575757;
    }

    /* 메인 콘텐츠 스타일 */
    .main-content {
      margin-left: 220px;
      padding: 20px;
    }
  </style>
</head>
<body>
  <!-- 사이드바 -->
  <div class="sidebar">
    <h3 style="color: white; text-align: center;">Admin Panel</h3>
    <a href="/admin/dashboard">Product Management</a>
    <a href="/admin/orders">Order Management</a>
    <a href="/admin/stores">Store Management</a>
    <a href="/auth/logout" style="color: red; font-weight: bold;">Logout</a> <!-- 로그아웃 버튼 -->
  </div>

  <!-- 메인 콘텐츠 -->
  <div class="main-content">
    <%- body %>
  </div>
</body>
</html>
